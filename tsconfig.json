{
  "extends": "@ajv-validator/config",
  "include": ["lib"],
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "dist",
    "lib": ["ES2018", "DOM"],
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "target": "ES2018",
    "resolveJsonModule": true,
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true
  }
}
